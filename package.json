  "main": "lib/index",
  "homepage": "https://github.com/vseryakov/backendjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/vseryakov/backendjs.git"
  },
  "dependencies": {
    "express": "5.2.1",
    "mime-types": "3.0.2",
    "qs": "6.14.1",
    "fast-xml-parser": "5.3.3"
  },
  "peerDependencies": {
    "croner": "9.1.0",
    "formidable": "3.5.4",
    "nodemailer": "7.0.12",
    "nats": "2.29.3",
    "pg": "8.17.2",
    "redis": "3.1.2",
    "sharp": "0.34.5",
    "unix-dgram": "2.0.7",
    "web-push": "3.6.7",
    "ws": "8.19.0",
    "@parse/node-apn": "7.0.1"
  },
  "peerDependenciesMeta": {
    "croner": { "optional": true },
    "formidable": { "optional": true },
    "nodemailer": { "optional": true },
    "nats": { "optional": true },
    "pg": { "optional": true },
    "redis": { "optional": true },
