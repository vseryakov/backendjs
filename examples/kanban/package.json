{
 "version": "0.1.0",
 "author": "vlad",
 "name": "app",
 "description": "The backend",
 "repository": { "type": "git", "url": "http://github.com/vseryakov/backendjs.git" },
 "main": "app.js",
 "dependencies": {
    "backendjs": "github:vseryakov/backendjs"
 },
 "engines": { "node": ">= 24.0" },
 "eslintConfig": {
    "env": {
        "browser": true
    },
    "globals": {
        "app": false,
        "Alpine": false,
        "bootstrap": false,
        "bootpopup": false,
        "window": false,
        "document": false
    }
 },
 "scripts": {
    "init": "mkdir -p node_modules && cd node_modules && ln -sf ../../../ backendjs && ln -sf backendjs/bin .bin",
    "initdb": "rm -f kanban.db && bksh -db-create-tables -run-file tools/seed",
    "start": "bkjs run -api -watch",
    "bksh": "bksh"
 },
 "license": "BSD-3-Clause"
}
