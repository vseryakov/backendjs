ARG ALPINE=3.21

FROM alpine:$ALPINE

RUN apk --no-cache add \
  alpine-conf \
  alpine-sdk \
  apk-tools \
  coreutils \
  cmake \
  doas-sudo-shim \
  ccache \
  mc \
  nodejs=~22 \
  npm=~10 \
  python3=~3 \
  go \
  curl \
  file \
  zip \
  rsync \
  zlib-dev \
  zimg-dev \
  fontconfig-dev \
  freetype-dev \
  imlib2-dev \
  nasm && \
  apk -U upgrade -a

RUN adduser -D alpine && \
    addgroup alpine abuild && \
    echo 'alpine ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers && \
    node-gyp install
