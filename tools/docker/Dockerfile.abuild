ARG ALPINE=3.19

FROM alpine:$ALPINE

RUN apk --no-cache add \
  alpine-conf \
  alpine-sdk \
  apk-tools \
  coreutils \
  cmake \
  sudo \
  ccache \
  mc \
  nodejs=~20 \
  npm=~10 \
  python3=~3 \
  go \
  curl \
  file \
  zip \
  rsync \
  zlib-dev \
  zimg-dev \
  fontconfig-dev \
  freetype-dev \
  imlib2-dev \
  nasm && \
  apk -U upgrade -a

RUN adduser -D alpine && \
    addgroup alpine abuild && \
    echo 'alpine ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers
